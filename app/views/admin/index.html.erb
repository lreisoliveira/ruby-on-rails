<% if session[:autenticado].nil? %>
      <br />
      <br />
      <div class="row show-grid" >
        <div class="col-md-4"></div>
        <div class="col-md-4" style="border:1px solid #e9e9e9">
          <br />
          <form class="form-horizontal" name="" action="/admin" method="post">
            <div class="form-group">
              <label for="login" class="col-sm-2 control-label">Login</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="login" id="login" placeholder="Login">
              </div>
            </div>
            <div class="form-group">
              <label for="senha" class="col-sm-2 control-label">Senha</label>
              <div class="col-sm-10">
                <input type="password" class="form-control" name="senha" id="senha" placeholder="Senha">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success" value="Acessar">
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
              </div>
            </div>
          </form>
          <p align="center" class=" help-block"><%=@mensagem %></p>
        </div>
        <div class="col-md-4"></div>
    </div>
    <br />
<% end %>