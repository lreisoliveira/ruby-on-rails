<p id="notice"><%= notice %></p>

<p>
  <strong>Descrição:</strong>
  <%= @pergunta.descricao %>
</p>

<p>
  <strong>Vídeo:</strong>
  <%= @pergunta.video %>
</p>

<p>
  <strong>Vigente:</strong>
  <%= @pergunta.vigente == false ?  @pergunta.vigente.to_s.gsub('false', 'Não') : @pergunta.vigente.to_s.gsub('true', 'Sim') %>
</p>

<div class="btn btn-info"><%= link_to 'Editar', edit_pergunta_path(@pergunta) %></div>
<div class="btn btn-danger"><%= link_to 'Voltar', perguntas_path %></div>